{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Horus Lugo",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd --respawn -r @babel/register src/index.ts",
    "build": "babel ./src -d ./dist --extensions '.ts'",
    "typecheck": "tsc",
    "start": "node dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@types/node": "^13.7.1",
    "husky": "^4.2.3",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  },
  "engines": {
    "node": ">=12"
  }
}
